{
  "compilerOptions": {
    "target": "es6",  // Set to ES6 or later for modern JavaScript features
    "lib": ["dom", "esnext"],  // This ensures you have the latest browser features available
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"  // Ensures the new JSX Transform is used
  },
  "include": [
    "src"  // This includes all the files in the src directory
  ]
}
